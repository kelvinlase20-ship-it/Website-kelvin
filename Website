<script>
let produk = JSON.parse(localStorage.getItem("produk")) || [
{nama:"Smartphone Android",harga:3200000,img:"https://images.unsplash.com/photo-1511707171634-5f897ff02aa9"},
{nama:"Laptop Gaming",harga:12500000,img:"https://images.unsplash.com/photo-1517336714731-489689fd1ca8"},
{nama:"Smart TV 43 Inch",harga:5500000,img:"https://images.unsplash.com/photo-1593359677879-a4bb92f829d1"},
{nama:"Headset Wireless",harga:450000,img:"https://images.unsplash.com/photo-1583394838336-acd977736f90"},
{nama:"Keyboard Mechanical",harga:650000,img:"https://images.unsplash.com/photo-1517336714731-489689fd1ca8"}
];

let cart = JSON.parse(localStorage.getItem("cart")) || [];
let diskon = 0;

function renderProduk(){
    const el=document.getElementById("produkList");
    el.innerHTML="";
    produk.forEach(p=>{
        el.innerHTML+=`
        <div class="card">
        <img src="${p.img}">
        <h3>${p.nama}</h3>
        <b>Rp ${p.harga}</b>
        <button onclick="addCart('${p.nama}',${p.harga})">Beli</button>
        </div>`;
    });
    localStorage.setItem("produk",JSON.stringify(produk));
}

function renderCart(){
    const el=document.getElementById("cartList");
    let total=0; el.innerHTML="";
    cart.forEach((c,i)=>{
        total+=c.harga;
        el.innerHTML+=`
        <tr>
        <td>${c.nama}</td>
        <td>${c.harga}</td>
        <td><button onclick="hapus(${i})">Hapus</button></td>
        </tr>`;
    });
    document.getElementById("total").innerText=total;
    document.getElementById("totalDiskon").innerText=total-diskon;
    localStorage.setItem("cart",JSON.stringify(cart));
}

function addCart(n,h){cart.push({nama:n,harga:h});renderCart();}
function hapus(i){cart.splice(i,1);renderCart();}
function checkout(){alert("Terima kasih sudah berbelanja!");}

function login(){
    if(user.value=="admin" && pass.value=="123"){
        login.style.display="none";
        adminPanel.style.display="block";
    }else alert("Login gagal");
}

function tambahProduk(){
    produk.push({
        nama:namaProduk.value,
        harga:Number(hargaProduk.value),
        img:gambarProduk.value
    });
    renderProduk();
    alert("Produk ditambahkan");
}

function pakaiDiskon(){
    let total=cart.reduce((a,b)=>a+b.harga,0);
    if(kodeDiskon.value==="HEMAT10"){
        diskon=total*0.1;
        alert("Diskon 10% aktif");
    }else{
        diskon=0;
        alert("Kode salah");
    }
    document.getElementById("totalDiskon").innerText=total-diskon;
}

renderProduk();
renderCart();
</script>

